#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix-transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <4>;
        rows = <14>;

// | L_SW1  | L_SW2  | L_SW3  | L_SW4  | L_SW5  | L_SW6  |                     | R_SW1  | R_SW2  | R_SW3  | R_SW4  | R_SW5  | R_SW6  |
// | L_SW7  | L_SW8  | L_SW9  | L_SW10 | L_SW11 | L_SW12 |                     | R_SW7  | R_SW8  | R_SW9  | R_SW10 | R_SW11 | R_SW12 |
// | L_SW13 | L_SW14 | L_SW15 | L_SW16 | L_SW17 | L_SW18 |                     | R_SW13 | R_SW14 | R_SW15 | R_SW16 | R_SW17 | R_SW18 |
// | L_SW19 | L_SW20 | L_SW21 | L_SW22 | L_SW23 | L_SW24 | L_SW25 |   | R_SW19 | R_SW20 | R_SW21 | R_SW22 | R_SW23 | R_SW24 | R_SW25 |


        map = <
RC(0,0) RC(1,0) RC(2,0) RC(3,0) RC(4,0) RC(5,0)                 RC(8,0) RC(9,0) RC(10,0) RC(11,0) RC(12,0) RC(13,0)
RC(0,1) RC(1,1) RC(2,1) RC(3,1) RC(4,1) RC(5,1)                 RC(8,1) RC(9,1) RC(10,1) RC(11,1) RC(12,1) RC(13,1)
RC(0,2) RC(1,2) RC(2,2) RC(3,2) RC(4,2) RC(5,2)                 RC(8,2) RC(9,2) RC(10,2) RC(11,2) RC(12,2) RC(13,2)
RC(0,3) RC(1,3) RC(2,3) RC(3,3) RC(4,3) RC(5,3) RC(6,3) RC(7,2) RC(8,3) RC(9,3) RC(10,3) RC(11,3) RC(12,3) RC(13,3)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;

        col-gpios
            = <&xiao_d 10 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 9 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&xiao_d 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;
    };
};